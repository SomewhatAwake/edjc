# EDJC (Elite Dangerous Jump Calculator) Configuration
# 
# IMPORTANT: To use this plugin, you need to:
# 1. Get an Inara API key from https://inara.cz/inapi/
# 2. REGISTER YOUR APPLICATION with Inara for API access
# 3. Wait for approval from Inara (this can take some time)
# 4. Replace the values below with your actual credentials
#
# NOTE: Simply getting an API key is not enough - your application
# must be registered and approved by Inara before it will work!

# Your Inara API key (required)
inara_api_key = "YOUR_API_KEY_HERE"

# Your CMDR name (required) - this is your Elite Dangerous pilot name
cmdr_name = "YOUR_CMDR_NAME"

# Cache timeout in seconds (default: 300 = 5 minutes)
cache_timeout_seconds = 300

# Enable debug logging (default: false)
debug_mode = false

# Distance thresholds for route suggestions
neutron_highway_threshold_ly = 500.0
white_dwarf_threshold_ly = 150.0

# Result format string
# Available placeholders: {jumps}, {system}, {distance}, {route}, {from}, {to}
result_format = "ðŸš€ {jumps} jumps to {system} ({distance:.1}ly) via {route}"

# Show additional estimates
show_fuel_estimates = false
show_time_estimates = false
